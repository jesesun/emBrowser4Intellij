<idea-plugin>
    <id>space.vistarsvo.embrowser</id>
    <name>Embedded Web Browser for Intellij Platforms</name>
    <version>1.1.0</version>
    <vendor email="vistar.svo@gmail.com" url="https://github.com/vistarsvo/embrowser4intellij">Embedded Browser GitHub Repo</vendor>

    <description><![CDATA[
        <b>Embedded Web Browser for Intellij Platform</b><br>
        Forked from <a href="https://github.com/chocotan">chocotan Embedded Web Browser</a>
        <hr>
        <br>
        <p>
            No need to switch window between browser and IDE if you need to Google something :)<br>
            <a href="https://raw.githubusercontent.com/vistarsvo/emBrowser4Intellij/master/docs/img/introduce.png">
                <img width="300" height="163" src="https://raw.githubusercontent.com/vistarsvo/emBrowser4Intellij/master/docs/img/introduce.png" alt="Introduce Image" />
            </a>
        </p>
    ]]></description>

    <change-notes><![CDATA[
        <ul>
            <li>Add Reset Zoom control</li>
            <li>Add new icons for Darcula theme</li>
            <li>Add error loading notification</li>
            <li>Add button disable states</li>
            <li>Add zoom value label</li>
            <li>Add loading and fail states label</li>
            <li>Fix zooming</li>
            <li>Fix history</li>
        </ul>
    ]]>
    </change-notes>
    <idea-version since-build="173.0"/>

    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
    <toolWindow id="emBrowser" icon="/icons/browser.png" anchor="right" factoryClass="space.vistar.embrowser.BrowserWindowFactory"/>
    </extensions>

    <application-components>
    </application-components>

    <actions>
  </actions>
</idea-plugin>
